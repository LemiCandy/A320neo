<?xml version="1.0"?>
<PropertyList>
	<name>ILS</name>
	<w-base>256</w-base>
	<h-base>256</h-base>
	<layers>

		<!-- ILS Directional -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>ILS Heading</name>
			<emissive>true</emissive>
			<w>20</w>
			<h>177</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.162</x1>
				<y1>0</y1>
				<x2>0.273</x2>
				<y2>1</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
			</transformations>
		</layer>

		<!-- ILS Deflection bar -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>ILS Heading</name>
			<emissive>true</emissive>
			<w>4</w>
			<h>77</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.289</x1>
				<y1>0</y1>
				<x2>0.304</x2>
				<y2>0.535</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
				<!-- ILS Deflection -->
				<transformation>
					<type>x-shift</type>
					<property>instrumentation/nav[0]/heading-needle-deflection</property>
					<scale>4.124</scale>
				</transformation>
			</transformations>
		</layer>
	<!-- ILS Deflection Horizontal Scale Bar -->
		<layer>
			<condition>
				<and>	
					<equals>
						<property>/instrumentation/nav[0]/nav-loc</property>
						<value>true</value>
					</equals>
					<equals>
						<property>/instrumentation/nav[0]/in-range</property>
						<value>true</value>
					</equals>			
				</and>			
			</condition>
			<name>HorizontalScaleBar</name>
			<emissive>true</emissive>
			<w>7</w>
			<h>77</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.121</x1>
				<y1>0.554</y1>
				<x2>0.150</x2>
				<y2>0.927</y2>
			</texture>
			<transformations>
				<!-- ROSE center -->
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<!-- from vertical to horizontal -->
				<transformation>
					<type>rotation</type>
					<offset>90</offset>
				</transformation>
				<!-- Correct our heading deviation -->
				<transformation>
					<type>rotation</type>
					<property>orientation/heading-deg</property>
					<scale>-1</scale>
				</transformation>
				<!-- Correct ILS Source heading -->
				<transformation>
					<type>rotation</type>
					<property>instrumentation/nav/heading-deg</property>
				</transformation>
			</transformations>
		</layer>

	<!-- GlideSlope Scale -->
		<layer>
			<name>gs scale</name>
			<w>12</w>
			<h>90</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/symbols.png</path>
				<x1>0.528</x1>
				<y1>0.470</y1>
				<x2>0.579</x2>
				<y2>0.849</y2>
			</texture>
			<transformations>
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<transformation>
					<type>x-shift</type>
					<offset>120</offset>
				</transformation>
			</transformations>
			<emissive>true</emissive>
		</layer>
	<!-- GlideSlope Pointer -->
		<layer>
			<condition>
				<equals>
					<property>/instrumentation/nav[0]/gs-in-range</property>
					<value>true</value>
				</equals>
			</condition>
			<name>gs pointer</name>
			<w>10</w>
			<h>16</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/symbols.png</path>
				<x1>0.686</x1>
				<y1>0.833</y1>
				<x2>0.761</x2>
				<y2>0.952</y2>
			</texture>
			<transformations>
				<transformation>
					<type>y-shift</type>
					<offset>-12</offset>
				</transformation>
				<transformation>
					<type>x-shift</type>
					<offset>120</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<property>instrumentation/nav/gs-needle-deflection-norm</property>
					<interpolation>
					<entry><ind>-1</ind><dep>-57.285</dep></entry>
					<entry><ind>0</ind><dep>0</dep></entry>
					<entry><ind>1</ind><dep>57.285</dep></entry>
					</interpolation>
				</transformation>
			</transformations>
			<emissive>true</emissive>
		</layer>





<!-- ############################################# TEXT   ############################################### -->

		<layer>
			<name>ILSAPP</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>8</point-size>
			<color>
			<red>1.0</red>
			<green>0.5</green>
			<blue>0.5</blue>
			</color>
			
			<chunks>
				<chunk>
					<type>literal</type>
					<text>ILS APP</text>
					<!--alignment>center-center</alignment-->
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-20</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>118</offset>
				</transformation>
			</transformations>
		</layer>


<!-- ######################## TOP LEFT ############################## -->

		<layer>
			<name>ILS 1</name>
			<condition>
				<equals>
					<property>instrumentation/efis[0]/input/vor-adf-1</property>
					<value>1</value>
				</equals>			

			</condition>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
			<red>1.0</red>
			<green>1.0</green>
			<blue>1.0</blue>
			</color>
			<chunks>
				<chunk>
				<type>literal</type>
				<text>ILS 1</text>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>55</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>118</offset>
				</transformation>
			</transformations>
		</layer>

		<layer>
			<condition>
				<equals>
					<property>instrumentation/efis[0]/input/vor-adf-1</property>
					<value>1</value>
				</equals>			

			</condition>
			<name>VORfreq</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>0.0</red>
				<green>1.0</green>
				<blue>0.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>text-value</type>
					<property>instrumentation/nav/frequencies/selected-mhz</property>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>85</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>118</offset>
				</transformation>
			</transformations>
		</layer>
		<layer>
			<name>crs</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>literal</type>
					<text>CRS</text>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>60</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>108</offset>
				</transformation>
			</transformations>
		</layer>


		<layer>
			<condition>
				<equals>
					<property>instrumentation/efis[0]/input/vor-adf-1</property>
					<value>1</value>
				</equals>			

			</condition>
			<name>VOR RADIAL</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>0.0</red>
				<green>1.0</green>
				<blue>0.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>number-value</type>
					<property>instrumentation/nav/radials/target-radial-deg</property>
					<format>%03.0f</format>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>85</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>108</offset>
				</transformation>
			</transformations>
		</layer>

		<layer>
			<condition>
				<and>
					<equals>
						<property>instrumentation/efis[0]/input/vor-adf-1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>instrumentation/nav[0]/in-range</property>
						<value>1</value>
					</equals>			
				</and>
			</condition>
			<name>VOR Ident</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>text-value</type>
					<property>instrumentation/nav/nav-id</property>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>85</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>98</offset>
				</transformation>
			</transformations>
		</layer>


<!-- ######### BOTTOM RIGHT ########## -->
	<!-- VOR1 Icon-->
		<layer>
			<condition>
				<equals>
					<property>instrumentation/efis[0]/input/vor-adf-1</property>
					<value>1</value>
				</equals>			

			</condition>
			<name>VOR1</name>
			<emissive>true</emissive>
			<w>10</w>
			<h>20</h>
			<texture>
				<path>Aircraft/A330-200/Models/Instruments/ND/res/A320neo_symbols.png</path>

				<!-- Orign is down left-->
				<x1>0.634</x1>
				<y1>0.833</y1>
				<x2>0.734</x2>
				<y2>1</y2>

			</texture>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-120</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>-108</offset>
				</transformation>
			</transformations>
		</layer>
	
	<!-- VOR1 Name -->
		<layer>
			<name>VOR1</name>
			<condition>
				<equals>
					<property>instrumentation/efis[0]/input/vor-adf-1</property>
					<value>1</value>
				</equals>			

			</condition>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>literal</type>
					<text>ILS 1</text>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-110</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>-108</offset>
				</transformation>
			</transformations>
		</layer>

	
	<!-- VOR/ADF IDENT -->
		<layer>
			<name>VOR Ident</name>
			<condition>
				<and>
					<equals>
						<property>instrumentation/efis[0]/input/vor-adf-1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>instrumentation/nav[0]/in-range</property>
						<value>1</value>
					</equals>			
				</and>
			</condition>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>1.0</red>
				<green>1.0</green>
				<blue>1.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>text-value</type>
					<property>instrumentation/nav/nav-id</property>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-110</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>-118</offset>
				</transformation>
			</transformations>
		</layer>



	<!-- DME Distance -->
		<layer>
			<condition>
				<and>
					<equals>
						<property>instrumentation/efis[0]/input/vor-adf-1</property>
						<value>1</value>
					</equals>
					<equals>
						<property>instrumentation/dme[0]/in-range</property>
						<value>1</value>
					</equals>			
				</and>
			</condition>
			<name>VOR dist</name>
			<type>text</type>
			<font>arial_black</font>
			<point-size>7</point-size>
			<color>
				<red>0.0</red>
				<green>1.0</green>
				<blue>0.0</blue>
			</color>
			<chunks>
				<chunk>
					<type>number-value</type>
					<property>/instrumentation/dme/indicated-distance-nm</property>
					<!--scale>0.000539</scale-->
					<format>%03.1f</format>
				</chunk>
			</chunks>
			<transformations>
				<transformation>
					<type>x-shift</type>
					<offset>-110</offset>
				</transformation>
				<transformation>
					<type>y-shift</type>
					<offset>-128</offset>
				</transformation>
			</transformations>
		</layer>


	</layers>
</PropertyList>
